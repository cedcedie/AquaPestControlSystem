@model AquaPestControlSystem.Models.ReportViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Aquarius Pest Control Services - Activity Log</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/output.css" media="all" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-grid.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-reboot.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-utilities.min.css" />
    <style>
        .content {
            display: flex;
            flex-wrap: nowrap;
            height: 100vh;
        }

        .table-container {
            padding: 20px;
            margin: 10px;
            flex: 1 0 auto;
            box-sizing: border-box;
        }

        .col-md-6 {
            padding-left: 15px;
            padding-right: 15px;
            display: flex;
            flex: 1 0 50%;
            flex-direction: column;
        }

        .table-container h2 {
            margin-bottom: 20px;
        }

        .table {
            width: 100%;
            table-layout: fixed;
        }

        .table th, .table td {
            text-align: center;
            padding: 8px;
        }

        .form-label {
            margin-bottom: 8px;
        }

        .form-control, .form-select {
            width: 100%;
            padding: 10px;
            margin-bottom: 10px;
        }

        .row {
            margin-bottom: 15px;
        }

        .btn {
            padding: 10px 30px;
            font-size: 16px;
            margin-top: 20px;
        }

        input[type="file"] {
            padding: 10px;
            margin-bottom: 10px;
            width: 100%;
        }

        #problemImage {
            text-align: left;
            margin-top: 10px;
        }

        /* Modal Styles */
        .modal-content {
            background-color: #f0f8ff; 
        }

        .modal-header {
            background-color: #007bff; 
            color: white; 
        }

        .modal-footer button {
            background-color: #28a745; 
        }
    </style>
</head>
<body style="background-color: #8ecae6;">
    <div class="sidebar" id="menu">
        <h2>Aquarius Pest Control Services</h2>
        <a href="@Url.Action("TechnicianDashboard", "Technician")" class="menu-item" data-menu="Dashboard">
            <span class="icon">📋</span>
            <span>Dashboard</span>
        </a>
        <a href="@Url.Action("TechnicianReports", "Technician")" class="menu-item" data-menu="Reports">
            <span class="icon">📋</span>
            <span>Reports</span>
        </a>
        <a href="@Url.Action("TechnicianRequest", "Technician")" class="menu-item" data-menu="Request">
            <span class="icon">📋</span>
            <span>Request</span>
        </a>
        <a href="@Url.Action("TechnicianSchedule", "Technician")" class="menu-item" data-menu="Schedule">
            <span class="icon">📋</span>
            <span>Schedule</span>
        </a>
        <div class="profile">
            <a href="@Url.Action("TechnicianProfile", "Technician")" style="display: flex; align-items: center; text-decoration: none;">
                <img src="https://via.placeholder.com/40" alt="Profile Picture" style="margin-right: 10px;">
                <div class="profile-info" style="margin-right: 10px;">
                    <span>Rodrigo</span>
                    <span class="role">Proprietor</span>
                </div>
            </a>
            <a href="#" data-toggle="modal" data-target="#logoutModal" style="cursor: pointer; margin-left: 60px; text-decoration: none;">
                <span class="logout-arrow">⮞</span>
            </a>
        </div>
    </div>

    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="logoutModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="logoutModalLabel">Confirm Logout</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Are you sure you want to log out?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <a href="@Url.Action("UserLogin", "User")" class="btn btn-primary">Confirm</a>
                </div>
            </div>
        </div>
    </div>

    <div class="content">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <div class="table-container">
                        <h2 class="mb-4 text-center">INSPECTION SUMMARY</h2>
                        <form asp-action="TechnicianReports" id="inspectionForm" runat="server">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label for="dateInspection" class="form-label">Date Inspection:</label>
                                    <input asp-for="DateInspection" type="date" class="form-control" id="dateInspection" required />
                                    <asp:RequiredFieldValidator 
                                        ControlToValidate="dateInspection" 
                                        ForeColor="Red" 
                                        ErrorMessage="Date is required" 
                                        runat="server" />
                                </div>
                                <div class="col-md-6">
                                    <label for="inspectorName" class="form-label">Inspector Name:</label>
                                    <input asp-for="InspectorName" type="text" class="form-control" id="inspectorName" required />
                                    <asp:RequiredFieldValidator 
                                        ControlToValidate="inspectorName" 
                                        ForeColor="Red" 
                                        ErrorMessage="Inspector name is required" 
                                        runat="server" />
                                </div>
                            </div>

                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label for="clientName" class="form-label">Client Name:</label>
                                    <input asp-for="ClientName" type="text" class="form-control" id="clientName" required />
                                    <asp:RequiredFieldValidator 
                                        ControlToValidate="clientName" 
                                        ForeColor="Red" 
                                        ErrorMessage="Client name is required" 
                                        runat="server" />
                                </div>
                                <div class="col-md-6">
                                    <label for="address" class="form-label">Address:</label>
                                    <input asp-for="Address" type="text" class="form-control" id="address" required />
                                    <asp:RequiredFieldValidator 
                                        ControlToValidate="address" 
                                        ForeColor="Red" 
                                        ErrorMessage="Address is required" 
                                        runat="server" />
                                </div>
                            </div>

                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label for="contactInfo" class="form-label">Contact Information:</label>
                                    <input asp-for="ContactNum" type="text" class="form-control" id="contactInfo" required />
                                    <asp:RequiredFieldValidator 
                                        ControlToValidate="contactInfo" 
                                        ForeColor="Red" 
                                        ErrorMessage="Contact information is required" 
                                        runat="server" />
                                </div>
                                <div class="col-md-6">
                                    <label for="inspectionType" class="form-label">Inspection Type:</label>
                                    <select asp-for="InspectionType" class="form-select" id="inspectionType" required>
                                        <option selected disabled>Select</option>
                                        <option>Initial</option>
                                        <option>Routine</option>
                                        <option>Follow Up</option>
                                        <option>Food Safety Compliance</option>
                                        <option>Others</option>
                                    </select>
                                    <asp:RequiredFieldValidator 
                                        ControlToValidate="inspectionType" 
                                        ForeColor="Red" 
                                        ErrorMessage="Inspection type is required" 
                                        runat="server" />
                                </div>
                            </div>

                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label for="area" class="form-label">Areas:</label>
                                    <select asp-for="Areas" class="form-select" id="area" required>
                                        <option selected disabled>Select</option>
                                        <option>Kitchen</option>
                                        <option>Storage Areas</option>
                                        <option>Bathrooms</option>
                                        <option>Basement/Attics</option>
                                        <option>Outdoor Areas</option>
                                    </select>
                                    <asp:RequiredFieldValidator 
                                        ControlToValidate="area" 
                                        ForeColor="Red" 
                                        ErrorMessage="Area is required" 
                                        runat="server" />
                                </div>
                                <div class="col-md-6">
                                    <label for="treatmentType" class="form-label">Treatment Type:</label>
                                    <select asp-for="TreatmentType" class="form-select" id="treatmentType" required>
                                        <option selected disabled>Select</option>
                                        <option>Chemical Spray</option>
                                        <option>Bait Stations</option>
                                        <option>Traps</option>
                                        <option>Exclusion Methods</option>
                                        <option>Other</option>
                                    </select>
                                    <asp:RequiredFieldValidator 
                                        ControlToValidate="treatmentType" 
                                        ForeColor="Red" 
                                        ErrorMessage="Treatment type is required" 
                                        runat="server" />
                                </div>
                            </div>

                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label for="pestType" class="form-label">Pest Type:</label>
                                    <select asp-for="PestType" class="form-select" id="pestType" required>
                                        <option selected disabled>Select</option>
                                        <option>Rodent</option>
                                        <option>Termites</option>
                                        <option>Mosquito</option>
                                        <option>Ants</option>
                                        <option>Cockroach</option>
                                    </select>
                                    <asp:RequiredFieldValidator 
                                        ControlToValidate="pestType" 
                                        ForeColor="Red" 
                                        ErrorMessage="Pest type is required" 
                                        runat="server" />
                                </div>
                                <div class="col-md-6">
                                    <label for="salesInput" class="form-label">Sales Input:</label>
                                    <input asp-for="SalesInput" type="text" class="form-control" id="salesInput" placeholder="Enter sales details" required />
                                    <asp:RequiredFieldValidator 
                                        ControlToValidate="salesInput" 
                                        ForeColor="Red" 
                                        ErrorMessage="Sales input is required" 
                                        runat="server" />
                                </div>
                            </div>

                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label for="problemImage" class="form-label">Add Image for Problem:</label>
                                    <input asp-for="ImageFile" type="file" class="form-control" id="problemImage" accept="image/*" multiple required />
                                    <asp:RequiredFieldValidator 
                                        ControlToValidate="problemImage" 
                                        ForeColor="Red" 
                                        ErrorMessage="Problem image is required" 
                                        runat="server" />
                                </div>
                            </div>

                            <div class="mt-4 text-center">
                            
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                        </form>
                    </div>
                </div>

            

    <div class="modal fade" id="submitModal" tabindex="-1" role="dialog" aria-labelledby="submitModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="submitModalLabel">Submit Inspection</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Are you sure you want to submit the inspection details?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" onclick="submitForm()">Confirm</button>
                </div>
            </div>
        </div>
    </div>

    <script src="~/js/proSidebar.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        function submitForm() {
            $('#submitModal').modal('hide');
            alert('Inspection Submitted');
        }
    </script>
</body>
</html>
