@model AquaPestControlSystem.Models.AppointmentViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Aquarius Pest Control Services - Appointment Details</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/output.css" media="all" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        .table-container {
            min-height: 820px; /* Adjust as needed */
        }
        .form-label {
            font-weight: bold;
        }
        .form-container {
            max-width: 900px; /* Adjust the max-width for a larger container */
            margin: 0 auto; /* Centers the form horizontally */
            padding: 20px; /* Add padding inside the container */
        }
        .content {
            padding: 30px;
        }
        .form-control-file {
            padding: 6px 12px;
        }
    </style>
</head>
<body style="background-color: #8ecae6;">
    <div class="sidebar" id="menu">
        <h2>Aquarius Pest Control Services</h2>
        <a href="@Url.Action("ProprieterDashboard", "Proprieter")" class="menu-item" data-menu="Dashboard">
            <span class="icon">📋</span>
            <span>Dashboard</span>
        </a>
        <a href="@Url.Action("ProprieterAppointments", "Proprieter")" class="menu-item" data-menu="appointments">
            <span class="icon">📅</span>
            <span>Appointments</span>
        </a>
        <a href="@Url.Action("ProprieterCustomer", "Proprieter")" class="menu-item" data-menu="Customers">
            <span class="icon">👥</span>
            <span>Customers</span>
        </a>
        <a href="@Url.Action("ProprieterTechnicians", "Proprieter")" class="menu-item" data-menu="Technicians">
            <span class="icon">🔧</span>
            <span>Technicians</span>
        </a>
        <a href="@Url.Action("ProprieterReports", "Proprieter")" class="menu-item" data-menu="Reports">
            <span class="icon">📊</span>
            <span>Reports</span>
        </a>
        <a href="@Url.Action("ProprieterActivityLog", "Proprieter")" class="menu-item" data-menu="Activity-log">
            <span class="icon">📑</span>
            <span>Activity Log</span>
        </a>

        <div class="profile">
            <img src="https://via.placeholder.com/40" alt="Profile Picture">
            <div class="profile-info">
                <span>Rodrigo</span>
                <span class="role">Proprietor</span>
            </div>
            <span class="logout-arrow">⮞</span>
        </div>
    </div>

    <div class="content">
        <div class="container-fluid">
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="table-container form-container">
                        <h2 class="text-center mb-4">Appointment Details</h2>
                        <form asp-action="ProprieterAddAppointment" method="post" id="appointmentForm" enctype="multipart/form-data">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label for="email" class="form-label">Email:</label>
                                    <input type="email" class="form-control" id="email" placeholder="Enter Email Address">
                                </div>
                            </div>

                            <div class="row g-3">
                                <div class="col-md-4">
                                    <label for="firstName" class="form-label">First Name:</label>
                                    <input asp-for="FirstName" type="text" class="form-control" id="firstName" placeholder="Enter First Name">
                                    <span asp-validation-for="MiddleName" class="text-danger"></span>
                                </div>
                                <div class="col-md-4">
                                    <label for="middleName" class="form-label">Middle Name:</label>
                                    <input asp-for="MiddleName" type="text" class="form-control" id="middleName" placeholder="Enter Middle Name">
                                    <span asp-validation-for="MiddleName" class="text-danger"></span>
                                </div>
                                <div class="col-md-4">
                                    <label for="lastName" class="form-label">Last Name:</label>
                                    <input asp-for="LastName" type="text" class="form-control" id="lastName" placeholder="Enter Last Name">
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label for="contactNumber" class="form-label">Contact Number:</label>
                                    <input asp-for="ContactNum" type="tel" class="form-control" id="contactNumber" placeholder="Enter Contact Number">
                                    <span asp-validation-for="ContactNum" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label for="address" class="form-label">Address:</label>
                                    <input asp-for="Address" type="text" class="form-control" id="address" placeholder="Enter Address">
                                    <span asp-validation-for="Address" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label for="pestProblem" class="form-label">Pest Problem:</label>
                                    <input asp-for="PestProblem" type="text" class="form-control" id="pestProblem" placeholder="Describe Pest Problem">
                                    <span asp-validation-for="PestProblem" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label for="schedule" class="form-label">Schedule:</label>
                                    <input asp-for="Schedule" type="datetime-local" class="form-control" id="schedule">
                                    <span asp-validation-for="Schedule" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row g-3">
                                <div class="col-md-12">
                                    <label for="problemImage" class="form-label">Add Image for Problem:</label>
                                    <input asp-for="ImageFile"  type="file" class="form-control-file" id="problemImage" accept="image/*" multiple>
                                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="text-center mt-4">
                                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#submitModal">Submit</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/js/proSidebar.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
</body>
</html>
